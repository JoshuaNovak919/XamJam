    <svg:SvgImage Svg="{Binding FirstStar.Image}" WidthRequest="32" />
    <svg:SvgImage Svg="{Binding SecondStar.Image}" WidthRequest="32"/>
    <svg:SvgImage Svg="{Binding ThirdStar.Image}" WidthRequest="32"/>
    <svg:SvgImage Svg="{Binding FourthStar.Image}" WidthRequest="32"/>
    <svg:SvgImage Svg="{Binding FifthStar.Image}" WidthRequest="32"/>
    <!--<svg:SvgImage Svg="{Binding FirstStar.Image}" ClickedCommand="{Binding FirstStar.TappedCommand}" />
    <svg:SvgImage Svg="{Binding SecondStar.Image}" ClickedCommand="{Binding SecondStar.TappedCommand}" />
    <svg:SvgImage Svg="{Binding ThirdStar.Image}" ClickedCommand="{Binding ThirdStar.TappedCommand}" />
    <svg:SvgImage Svg="{Binding FourthStar.Image}" ClickedCommand="{Binding FourthStar.TappedCommand}" />
    <svg:SvgImage Svg="{Binding FifthStar.Image}" ClickedCommand="{Binding FifthStar.TappedCommand}" />-->
